@import "../../../style/skin.wxss";

.main-enroll-list {
	width: 100%;
	padding: 20rpx;
	display: flex;
	flex-direction: column;
}

.main-enroll-list .item {
	width: 100%;
	display: flex;
	flex-direction: column;
	background-color: #fff;
	border-radius: 10rpx;
	margin-bottom: 30rpx;
	position: relative;
	overflow: hidden;
}

.main-enroll-list .item .status {
	position: absolute;
	right: 0;
	top: 0;
	padding: 10rpx 20rpx;
	z-index: 99;
	background-color: #ccc;
	color: #fff;
	font-size: 26rpx;
	border-bottom-left-radius: 10rpx;
	border-top-right-radius: 10rpx;
	opacity: .9;
}


.main-enroll-list .item .line1 {
	width: 100%;
	font-size: 32rpx;
	padding: 20rpx 20rpx 30rpx;
	color: #000;
	border-bottom: 1rpx solid #eee;
}

.main-enroll-list .item .line2 {
	width: 100%;
	display: flex;
	padding: 20rpx;
	border-bottom: 1rpx solid #eee;
}

.main-enroll-list .item .line2 image {
	width: 250rpx;
	height: 160rpx;
	border-radius: 10rpx;
	margin-right: 20rpx; 
}

.main-enroll-list .item .line2 .right {
	flex: 1;
	display: flex;
	flex-direction: column;
}

.main-enroll-list .item .line2 .right .right-line1 {
	width: 100%;
	height: 110rpx;
	color: #000;
	font-size: 26rpx;
}

.main-enroll-list .item .line2 .right .right-line2 {
	width: 100%;
	font-size: 26rpx;
	margin-top: 10rpx;
}

 